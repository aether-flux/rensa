{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "*": ["./*"]
    },
    "esModuleInterop": true,
    //"moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
